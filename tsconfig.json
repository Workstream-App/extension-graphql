{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "jsx": "preserve",
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": false,
    "checkJs": false,
    "lib": [
      "esnext",
      "dom",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "typeRoots": [
    "./types.d.ts",
    "./node_modules/@types/"
  ]

}
